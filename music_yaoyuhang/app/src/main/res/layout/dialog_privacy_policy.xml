<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="0dp"
    android:layout_margin="0dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#ffffff"
        android:layout_width="297.00dp"
        android:layout_height="196.19dp"
        android:textAlignment="center"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="250.84dp"
            android:layout_height="56.65dp"
            android:text="声明与条款"
            android:textSize="22.04sp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:paddingTop="13.14dp"
            android:paddingBottom="8.21dp"
            android:layout_marginLeft="23.09dp"
            android:layout_marginRight="23.09dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="250.84dp"
            android:layout_height="73.05dp"
            android:text="欢迎使用音乐社区，我们严格遵守相关法律法规保护您的个人隐私。请阅读并同意用户协议与隐私政策。"
            android:textSize="15.74sp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:paddingBottom="7.39dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/argee"
            android:layout_width="250.84dp"
            android:layout_height="24.63dp"
            android:text="不同意"
            android:textSize="11.55sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:paddingBottom="7.39dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="297.00dp"
            android:layout_height="41.86dp"
            android:text="同意并使用"
            android:background="#3482FF"
            android:textSize="17.86sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/argee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
